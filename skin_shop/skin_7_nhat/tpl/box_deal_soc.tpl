<div class="box_deal_soc">
    <div class="box_title">
        <h2>Mua thêm deal sốc</h2>
        <div class="more">
            <a href="/addon-deal.html?id=128">Xem thêm <i class="fa fa-chevron-right"></i></a>
        </div>
    </div>
    <div class="box_list_deal">                            
        <div class="list_product">
            <div class="li_product swiper-slide">
                <div class="product-content">
                    <div class="product-thumbnail">
                        <a href="">
                            <img class="minh_hoa" src="{minh_hoa}">
                        </a>
                        {label_sale}
                    </div>
                    <div class="product-info">
                        <h3 class="product-name"><a href="" title="{tieu_de}"> {tieu_de}</a></h3>
                        <div class="price-box">
                            <span class="price">{gia_moi}₫</span>
                            <span class="compare-price">{gia_cu}₫</span>
                        </div>
                        <div class="check_product">
                            <input type="checkbox" name="main_product" value="{sp_id}" checked="checked" name="check_product">
                            <label><i class="fa fa-square-o"></i><i class="fa fa-check-square" style="opacity: 0.5"></i>Chọn sản phẩm</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="icon_plus">+</div>
            {list_muakem}
            <div class="button_deal_soc"><button class="add_muakem_view"><i class="fa fa-shopping-cart"></i> Bấm để mua deal sốc</button></div>
        </div>
    </div>
</div>