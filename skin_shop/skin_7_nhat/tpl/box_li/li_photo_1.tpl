<div class="item" data-img="{src}" data-src="{src}">
    <a href="javascript:void(0)" data-zoom-image="{src}"
        class="d-block pos-relative embed-responsive embed-responsive-4by3" title="{tieu_de}" data-image="{src}"
        data-zoom-image="{src}" data-rel="prettyPhoto[product-gallery]">
        <picture>
            <source media="(max-width: 991px)" srcset="{src}" />

            <img class="img-fluid" style="--image-scale: 1" data-img="{src}" src="{src}" alt="{tieu_de}" width="600"
                height="600" data-src="{src}" />
        </picture>
    </a>
</div>